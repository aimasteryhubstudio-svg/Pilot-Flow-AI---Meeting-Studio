            <!-- RIGHT: ANALYSIS HUD -->
            <div class="lg:col-span-5 space-y-6">
                
                <!-- Output Console -->
                <div id="ai-output-container" class="glass-card rounded-2xl overflow-hidden hidden animate-in fade-in slide-in-from-bottom-4">
                    <div class="bg-slate-900 p-4 flex justify-between items-center">
                        <h3 class="text-white text-xs font-bold uppercase tracking-widest">Recap Console</h3>
