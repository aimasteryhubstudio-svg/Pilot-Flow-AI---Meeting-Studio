    <!-- Toast Notification -->
    <div id="toast" class="fixed bottom-6 right-6 bg-slate-900 text-sky-400 px-5 py-3 rounded-xl shadow-2xl transform translate-y-32 transition-transform duration-300 font-bold text-xs border border-sky-900 z-[100]">
        Content Copied to Clipboard
    </div>

    <script>
        const apiKey = "";
        const GEMINI_MODEL = "gemini-2.5-flash-preview-09-2025";
        let lastProcessedData = null;

        // Exponential Backoff API Wrapper
        async function callGemini(prompt, systemInstruction) {
            const url = `https://generativelanguage.googleapis.com/v1beta/models/${GEMINI_MODEL}:generateContent?key=${apiKey}`;
            const payload = {
                contents: [{ parts: [{ text: prompt }] }],
                systemInstruction: { parts: [{ text: systemInstruction }] }
            };

            for (let i = 0; i < 5; i++) {
                try {
                    const response = await fetch(url, {
                        method: 'POST',
                        headers: { 'Content-Type': 'application/json' },
                        body: JSON.stringify(payload)
                    });
                    if (!response.ok) throw new Error('API Rate Limit or Error');
                    const result = await response.json();
                    return result.candidates?.[0]?.content?.parts?.[0]?.text;
                } catch (e) {
                    await new Promise(r => setTimeout(r, Math.pow(2, i) * 1000));
                }
            }
            throw new Error('All retries failed.');
        }

        // Logic: Process Workflow
        async function processNotesWithAI() {
            const notes = document.getElementById('raw-notes').value;
            if (!notes) return showToast("Please enter meeting notes first.", true);

            setLoading(true);
            const persona = document.getElementById('persona-select').value;
            const tone = document.getElementById('tone-select').value;

            const system = `Act as a ${persona} for Pilot Flow AI. 
            Process the messy notes provided into a high-level professional recap. 
            Include: 
            1. Executive Summary (3-4 bullet points)
            2. Hard Decisions Made
            3. Action Items with [OWNER] and [DEADLINE]
            
            Tone: ${tone}. Use markdown-style headers. If owners are unstated, mark as [NEEDS ASSIGNMENT].`;

            try {
                const result = await callGemini(notes, system);
                lastProcessedData = result;
                showOutput(result);
            } catch (err) {
                showToast("Connection Error. Try again.", true);
            } finally {
                setLoading(false);
            }
        }

        // Logic: Scan for Risks
        async function analyzeRisksWithAI() {
            const notes = document.getElementById('raw-notes').value;
            if (!notes) return showToast("Notes required for risk scan.", true);

            setLoading(true);
            const system = "You are a Strategic Risk Analyst. Identify 3-5 hidden project risks, logic gaps, or unassigned dependencies in these meeting notes. Be blunt and professional.";

            try {
                const result = await callGemini(notes, system);
                const radar = document.getElementById('risk-radar');
                const content = document.getElementById('risk-content');
                
                radar.classList.remove('hidden');
                content.innerHTML = result.split('\n').filter(l => l.trim()).map(l => `
                    <div class="flex items-start bg-red-50 p-3 rounded-lg border border-red-100">
                        <span class="text-red-500 font-bold mr-2">!</span>
                        <span class="text-[11px] text-red-900 font-medium">${l.replace(/^[*-]\s*/, '')}</span>
                    </div>
                `).join('');
                
                radar.scrollIntoView({ behavior: 'smooth' });
            } catch (err) {
                showToast("Risk Analysis Failed.", true);
            } finally {
                setLoading(false);
            }
        }

        // Logic: Draft Email
        async function draftEmailWithAI() {
            if (!lastProcessedData) return showToast("Process notes first.", true);

            setLoading(true);
            const tone = document.getElementById('tone-select').value;
            const system = `Transform the provided meeting recap into a polished, professional email to stakeholders. 
            Use a clear, informative subject line. Tone: ${tone}. Start the email with 'Hi Team,'.`;

            try {
                const email = await callGemini(lastProcessedData, system);
                showOutput(email);
            } catch (err) {
                showToast("Email Draft Failed.", true);
            } finally {
                setLoading(false);
            }
        }

        // UI Handlers
        function setLoading(val) {
            document.getElementById('loading-indicator').classList.toggle('hidden', !val);
            document.getElementById('raw-notes').disabled = val;
        }

        function showOutput(text) {
            const container = document.getElementById('ai-output-container');
            const target = document.getElementById('ai-result-content');
            container.classList.remove('hidden');
            target.innerText = text;
            container.scrollIntoView({ behavior: 'smooth' });
        }

        function copyToClipboard(id) {
            const text = document.getElementById(id).innerText;
            const temp = document.createElement('textarea');
            temp.value = text;
            document.body.appendChild(temp);
            temp.select();
            document.execCommand('copy');
            document.body.removeChild(temp);
            showToast("Copied to Clipboard!");
        }

        function showToast(msg, isError = false) {
            const t = document.getElementById('toast');
            t.innerText = msg;
            t.style.borderColor = isError ? '#ef4444' : '#0ea5e9';
            t.style.color = isError ? '#ef4444' : '#0ea5e9';
            t.classList.remove('translate-y-32');
            setTimeout(() => t.classList.add('translate-y-32'), 3000);
        }

        function initChart() {
            const ctx = document.getElementById('roiChart').getContext('2d');
            new Chart(ctx, {
                type: 'line',
                data: {
                    labels: ['Note Cleanup', 'Task Extraction', 'Risk Scan', 'Email Drafting'],
                    datasets: [
                        {
                            label: 'Manual Process (Mins)',
                            data: [12, 15, 20, 15],
                            borderColor: '#E2E8F0',
                            backgroundColor: 'transparent',
                            borderWidth: 2,
                            borderDash: [5, 5],
                            pointRadius: 0,
                            tension: 0.3
                        },
                        {
                            label: 'Pilot Flow AI (Mins)',
                            data: [2, 1, 0.5, 2],
                            borderColor: '#0EA5E9',
                            backgroundColor: 'rgba(14, 165, 233, 0.1)',
                            fill: true,
                            borderWidth: 3,
                            pointRadius: 4,
                            pointBackgroundColor: '#0EA5E9',
                            tension: 0.3
                        }
                    ]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: { 
                        legend: { 
                            position: 'bottom', 
                            labels: { 
                                boxWidth: 12, 
                                font: { size: 10, weight: 'bold' },
                                padding: 20
                            } 
                        } 
                    },
                    scales: {
                        y: { beginAtZero: true, grid: { color: '#F1F5F9' }, ticks: { font: { size: 10 } } },
                        x: { grid: { display: false }, ticks: { font: { size: 10 } } }
                    }
                }
            });
        }

        window.onload = initChart;
    </script>
</body>
